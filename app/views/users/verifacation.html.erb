<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <div class="btn-user-show">
          <%= l(@first_day, format: :middle) %>時間管理表
        </div>
      </td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.designated_work_start_time %></br>
          指定勤務終了時間：<%= format_basic_info(@user.designated_work_end_time %>
      </td colspan="3">基本時間：<%= format_basic_info(@user.basic_work_time) %>
      <td>初日<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：<%= @user.employee_number %></td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

